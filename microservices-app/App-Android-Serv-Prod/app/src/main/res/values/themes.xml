<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Data" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pastel_yellow</item>
        <item name="colorSecondaryVariant">@color/pastel_yellow_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green_primary</item>
        <!-- Enable ActionBar -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/CustomButtonStyle</item>
        <item name="textInputStyle">@style/CustomTextInputStyle</item>
    </style>

    <!-- Estilo personalizado para botÃµes -->
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Estilo para TextInputLayout -->
    <style name="CustomTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/green_secondary</item>
        <item name="hintTextColor">@color/green_primary</item>
    </style>
</resources>