<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <!-- Declare any variables for data binding here -->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tituloServico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título do Serviço"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/descricaoServico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição do Serviço"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/contratarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contratar Serviço"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</layout>
