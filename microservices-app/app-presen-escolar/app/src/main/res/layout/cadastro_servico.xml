<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Spinner
        android:id="@+id/tipoServicoSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/nomeServicoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Serviço" />

    <EditText
        android:id="@+id/descricaoServicoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição do Serviço" />

    <ImageView
        android:id="@+id/imagemServicoImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="Imagem do Serviço"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/salvarButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar Serviço" />

    <Button
        android:id="@+id/editarButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar Serviço" />
</LinearLayout>
